<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--font chữ cho menu-->
    <style name="font.family.menu" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>
    <!--font chữ cho tab layout-->
    <style name="tab_font" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="textAllCaps">true</item>
    </style>
    <!--font chữ cho toolbar-->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>